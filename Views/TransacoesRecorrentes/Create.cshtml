@model Dinheiro.Models.TransacaoRecorrente

@{
    ViewData["Title"] = "Nova Recorrência";
}

<h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">Criar Nova Recorrência</h1>
<p class="text-gray-600 dark:text-gray-400 mb-6">Crie uma regra para despesas ou receitas que se repetem todo mês.</p>
<hr class="mb-6 border-gray-200 dark:border-gray-700" />

<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="mb-4">
            <label asp-for="Descricao" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
            <input asp-for="Descricao" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Descricao" class="text-red-500 text-sm"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="mb-4">
                <label asp-for="Valor" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
                <input asp-for="Valor" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Valor" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="DiaDoMes" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Dia do Mês</label>
                <input asp-for="DiaDoMes" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="DiaDoMes" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="mb-4">
                <label asp-for="DataInicio" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Data de Início</label>
                <input asp-for="DataInicio" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="DataInicio" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="DataFim" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Data de Fim (opcional)</label>
                <input asp-for="DataFim" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="DataFim" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="mb-4">
                <label asp-for="Tipo" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoTransacao>()" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline">
                    <option selected="selected" value="">Selecione o Tipo</option>
                </select>
                <span asp-validation-for="Tipo" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="CategoriaId" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
                <select asp-for="CategoriaId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" asp-items="ViewBag.CategoriaId">
                    <option selected="selected" value="">Selecione a Categoria</option>
                </select>
            </div>
        </div>

        <div class="mb-4">
            <label class="block text-gray-500 dark:text-gray-400 font-bold">
                <input asp-for="Ativo" class="mr-2 leading-tight" />
                <span class="text-sm">Recorrência Ativa</span>
            </label>
        </div>

        <div class="flex items-center justify-between mt-6">
            <input type="submit" value="Salvar" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 transform hover:scale-105 focus:outline-none focus:shadow-outline" />
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-600 dark:text-gray-400 hover:text-blue-500">
                Voltar para a Lista
            </a>
        </div>
    </form>
</div>