@{
    var controllerAtual = ViewContext.RouteData.Values["controller"]?.ToString();
    var actionAtual = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle Financeiro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class'
        }
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-700 dark:text-gray-300 transition-colors duration-300">
    <header>
        <nav class="bg-white dark:bg-gray-800 shadow-md">
            <div class="container mx-auto px-4">
                <div class="flex items-center justify-between h-16">

                    <div class="flex items-center space-x-8">
                        <a class="text-xl font-bold text-gray-800 dark:text-white" asp-area="" asp-controller="Home" asp-action="Index">ControleFinanceiro</a>

                        <ul class="flex items-center space-x-6">
                            <li>
                                <a class='font-semibold @(controllerAtual == "Home" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "Transacoes" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Transacoes" asp-action="Index">Transações</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "Contas" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Contas" asp-action="Index">Contas</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "Categorias" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Categorias" asp-action="Index">Categorias</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "TransacoesRecorrentes" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="TransacoesRecorrentes" asp-action="Index">Recorrências</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "Relatorios" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Relatorios" asp-action="Index">Relatórios</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "Metas" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Metas" asp-action="Index">Metas</a>
                            </li>
                            <li>
                                <a class='font-semibold @(controllerAtual == "Projecao" ? "text-blue-600 dark:text-blue-400" : "text-gray-600 dark:text-gray-300 hover:text-blue-600")' asp-controller="Projecao" asp-action="Index">Projeção</a>
                            </li>
                        </ul>
                    </div>

                    <div class="flex items-center space-x-4">
                        <button id="theme-toggle" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5">
                            <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
                            <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm-.707 12.122l.707-.707a1 1 0 011.414 1.414l-.707.707a1 1 0 01-1.414-1.414zM11 17a1 1 0 102 0v-1a1 1 0 10-2 0v1zm2.536-6.464l.707-.707a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414z"></path></svg>
                        </button>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4 py-8">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400 text-center py-4 mt-8">
        <div class="container mx-auto">
            &copy; 2025 - ControleFinanceiro - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-blue-500">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <partial name="_Notification" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>