@model List<Dinheiro.ViewModels.ProjecaoMensalViewModel>

@{
    ViewData["Title"] = "Projeção Financeira";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Projeção e Simulação Financeira</h1>
    <p class="text-gray-600 dark:text-gray-400">Veja uma projeção do seu saldo futuro e simule o impacto de novas despesas.</p>
</div>


<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg mb-8">
    <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-white">Fazer uma Simulação de Despesa Futura</h2>
    <form asp-controller="Projecao" asp-action="Index" method="get">
        <div class="grid grid-cols-1 md:grid-cols-5 gap-x-4 gap-y-6 items-end">

            <div class="md:col-span-2">
                <label for="descricaoSimulacao" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Descrição da Simulação (opcional)</label>
                <input type="text" name="descricaoSimulacao" id="descricaoSimulacao" placeholder="Ex: Compra do Fogão" value="@ViewData["descricaoSimulacao"]" class="mt-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            </div>

            <div>
                <label for="valorSimulacao" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Valor Total</label>
                <input type="text" name="valorSimulacao" id="valorSimulacao" placeholder="1200,00" value="@ViewData["valorSimulacao"]" class="mt-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            </div>

            <div>
                <label for="dataSimulacao" id="labelDataSimulacao" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Data</label>
                <input type="date" name="dataSimulacao" id="dataSimulacao" value="@ViewData["dataSimulacao"]" class="mt-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            </div>

            <div id="campoNumeroParcelasSimulacao" style="display: none;">
                <label for="numeroParcelas" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nº de Parcelas</label>
                <input type="number" name="numeroParcelas" id="numeroParcelas" value="@ViewData["numeroParcelas"]" min="1" class="mt-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            </div>

            <div class="md:col-span-2">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 transform hover:scale-105">
                    Projetar
                </button>
            </div>

            <div class="md:col-span-3 pb-2">
                <label for="ehParceladoSimulacao" class="block text-gray-500 dark:text-gray-400 font-bold cursor-pointer">
                    <input type="checkbox" name="ehParceladoSimulacao" id="ehParceladoSimulacao" value="true" class="mr-2 leading-tight" />
                    <span class="text-sm">
                        É uma compra parcelada?
                    </span>
                </label>
            </div>

        </div>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-white">Projeção para os Próximos 12 Meses</h2>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Mês/Ano</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Saldo Inicial</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Receitas Previstas</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Despesas Previstas</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Saldo Final</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                @foreach (var mes in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                        <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900 dark:text-gray-100">@mes.MesAno</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-gray-700 dark:text-gray-300">@mes.SaldoInicial.ToString("C")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-green-500 dark:text-green-400">@mes.TotalReceitas.ToString("C")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-red-500 dark:text-red-400">
                            @mes.TotalDespesas.ToString("C")
                            @if (mes.DespesasSimuladas > 0)
                            {
                                <span class="text-xs text-blue-400 block">(inclui simulação)</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right font-bold @(mes.SaldoFinal < 0 ? "text-red-500 dark:text-red-400" : "text-gray-900 dark:text-gray-100")">
                            @mes.SaldoFinal.ToString("C")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}