@model IEnumerable<Dinheiro.Models.Meta>

@{
    ViewData["Title"] = "Suas Metas";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Suas Metas Financeiras</h1>
    <p class="text-gray-600 dark:text-gray-400">Crie e acompanhe o progresso dos seus objetivos.</p>
</div>


<p class="mb-4">
    <a asp-action="Create" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 transform hover:scale-105">
        Criar Nova Meta
    </a>
</p>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                    Título da Meta
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                    Progresso
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                    Ações
                </th>
            </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            @foreach (var item in Model)
            {
                var valorAtualCalculado = item.Aportes.Sum(a => a.Valor);
                var progresso = item.ValorAlvo > 0 ? (valorAtualCalculado / item.ValorAlvo) * 100 : 0;
                progresso = Math.Min(progresso, 100);

                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="font-medium text-gray-900 dark:text-gray-100">@item.Titulo</div>
                        <div class="text-sm text-gray-500 dark:text-gray-400">
                            <span class="font-semibold">@valorAtualCalculado.ToString("C")</span> de <span class="font-semibold">@item.ValorAlvo.ToString("C")</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center gap-x-3">
                            <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2.5">
                                <div class="bg-green-500 h-2.5 rounded-full" style="width: @progresso.ToString("F0")%"></div>
                            </div>
                            <span class="text-sm font-semibold text-gray-700 dark:text-gray-300 w-12 text-right">@progresso.ToString("F0")%</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-500 hover:text-indigo-400">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-500 hover:text-gray-400">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-400">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>