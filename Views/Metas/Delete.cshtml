@model Dinheiro.Models.Meta

@{
    ViewData["Title"] = "Deletar Meta";
    var valorAtualCalculado = Model.Aportes?.Sum(a => a.Valor) ?? 0;
}

<h1 class="text-3xl font-bold mb-2 text-red-600 dark:text-red-500">Você tem certeza que quer deletar esta meta?</h1>
<h3 class="text-lg mb-6 text-gray-700 dark:text-gray-300">Todos os aportes relacionados também serão excluídos. Esta ação não pode ser desfeita.</h3>
<hr class="mb-4 border-gray-200 dark:border-gray-700" />

<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
    <h4 class="font-semibold text-xl mb-4 text-gray-800 dark:text-white">Meta</h4>
    <dl class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd class="text-lg text-gray-900 dark:text-gray-100 md:col-span-3">@Html.DisplayFor(model => model.Titulo)</dd>

        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Valor Alvo</dt>
        <dd class="text-lg text-gray-900 dark:text-gray-100 md:col-span-3">@Model.ValorAlvo.ToString("C")</dd>

        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Valor Atual</dt>
        <dd class="text-lg text-gray-900 dark:text-gray-100 md:col-span-3">@valorAtualCalculado.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" class="mt-6">
    <input type="hidden" asp-for="Id" />
    <div class="flex items-center space-x-4">
        <input type="submit" value="Deletar Permanentemente" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 transform hover:scale-105 focus:outline-none focus:shadow-outline" />
        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-600 dark:text-gray-400 hover:text-blue-500">Voltar para a Lista</a>
    </div>
</form>