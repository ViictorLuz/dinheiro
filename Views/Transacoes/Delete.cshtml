@model Dinheiro.Models.Transacao

@{
    ViewData["Title"] = "Deletar Transação";
}

<h1 class="text-3xl font-bold mb-2 text-red-600 dark:text-red-500">Você tem certeza que quer deletar isto?</h1>
<h3 class="text-lg mb-6 text-gray-700 dark:text-gray-300">Esta ação não pode ser desfeita.</h3>
<hr class="mb-4 border-gray-200 dark:border-gray-700" />

<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
    <h4 class="font-semibold text-xl mb-4 text-gray-800 dark:text-white">Transação</h4>
    <dl class="grid grid-cols-1 md:grid-cols-4 gap-x-4 gap-y-8">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="text-lg text-gray-900 dark:text-gray-100 md:col-span-3">@Html.DisplayFor(model => model.Descricao)</dd>

        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.Valor)</dt>
        <dd class="text-lg font-semibold md:col-span-3 @(Model.Tipo == Dinheiro.Models.TipoTransacao.Receita ? "text-green-500 dark:text-green-400" : "text-red-500 dark:text-red-400")">@Model.Valor.ToString("C")</dd>

        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">@Html.DisplayNameFor(model => model.Data)</dt>
        <dd class="text-lg text-gray-900 dark:text-gray-100 md:col-span-3">@Model.Data.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" class="mt-6">
    <input type="hidden" asp-for="Id" />
    <div class="flex items-center space-x-4">
        <input type="submit" value="Deletar Permanentemente" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 transform hover:scale-105 focus:outline-none focus:shadow-outline" />
        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-600 dark:text-gray-400 hover:text-blue-500">Voltar para a Lista</a>
    </div>
</form>