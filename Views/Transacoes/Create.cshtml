@model Dinheiro.Models.Transacao

@{
    ViewData["Title"] = "Nova Transação";
}

<h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">Criar Nova Transação</h1>
<hr class="mb-6 border-gray-200 dark:border-gray-700" />

<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="mb-4">
            <label asp-for="Descricao" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
            <input asp-for="Descricao" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Descricao" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Valor" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
            <input asp-for="Valor" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Valor" class="text-red-500 text-sm"></span>
            <small id="ajudaValor" class="text-gray-500 dark:text-gray-400 text-xs italic">Insira o valor total. Se for parcelado, insira o valor da parcela.</small>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div class="flex items-center pt-4">
                <label for="EhParcelado" class="block text-gray-500 dark:text-gray-400 font-bold">
                    <input type="checkbox" name="EhParcelado" id="EhParcelado" value="true" class="mr-2 leading-tight" />
                    <span class="text-sm">É uma compra parcelada?</span>
                </label>
            </div>
            <div id="campoNumeroParcelas" style="display: none;">
                <label for="NumeroDeParcelas" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Número de Parcelas</label>
                <input type="number" name="NumeroDeParcelas" id="NumeroDeParcelas" value="1" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="Data" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
            <input asp-for="Data" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Data" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Tipo" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
            <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoTransacao>()" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline">
                <option selected="selected" value="">Selecione o Tipo</option>
            </select>
            <span asp-validation-for="Tipo" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="CategoriaId" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2"></label>
            <select asp-for="CategoriaId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" asp-items="ViewBag.CategoriaId">
                <option selected="selected" value="">Selecione a Categoria</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ContaId" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Conta</label>
            <select asp-for="ContaId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-white bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 leading-tight focus:outline-none focus:shadow-outline" asp-items="ViewBag.ContaId">
                <option selected="selected" value="">Selecione a Conta</option>
            </select>
            <span asp-validation-for="ContaId" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center justify-between mt-6">
            <input type="submit" value="Salvar" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 transform hover:scale-105 focus:outline-none focus:shadow-outline" />
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-gray-600 dark:text-gray-400 hover:text-blue-500">
                Voltar para a Lista
            </a>
        </div>
    </form>
</div>